' Confini del sistema
rectangle "Sistema POS" <<LIGHTBLUE>> {
    
    ' Casi d'uso di autenticazione
    package "Gestione Accesso" <<LIGHTYELLOW>> {
        usecase "UC1.1: Login Cassiere" as Login
